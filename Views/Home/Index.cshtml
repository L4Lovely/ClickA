@{

}
@model IndexView
<form asp-action="MainView" method="post">
    <div>
        <label asp-for="@Model.Sfp.Username">Username: </label>
        <input asp-for="@Model.Sfp.Username" />
    </div>
    <div>
        <label asp-for="@Model.Sfp.Password">Password: </label>
        <input type="password" asp-for="@Model.Sfp.Password" />
    </div>
   <div>
  <button type="submit">!Login!</button>
  <button type="button" onclick="location.href='../Home/SignUp'">!SignUp!</button>
   </div>
</form>

@if (Model.Message)
{
    <h1 style="text-align:center; margin-top:100px; color:red;">Nutzername oder Passwort falsch! Bitte versuchen Sie es erneut</h1>
}